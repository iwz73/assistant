<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:batch="http://www.springframework.org/schema/batch"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd">

	<batch:job id="flowJob">
		<batch:flow parent="flowFlow" id="flowJobFlow" next="flowTaskletStep"></batch:flow>
		<batch:step id="flowTaskletStep">
			<tasklet ref="flowTasklet"></tasklet>
		</batch:step>
	</batch:job>

	<!-- flow -->
	<batch:flow id="flowFlow">
		<batch:step id="flowReaderProcessorWriterStep">
			<tasklet>
				<chunk reader="flowReader" writer="flowWriter"
					commit-interval="3">
				</chunk>
			</tasklet>
		</batch:step>
	</batch:flow>

	<!-- reader -->
	<bean id="flowReader" class="idv.hsiehpinghan.springbatchassistant.reader.FlowReader"
		scope="step">
	</bean>

	<!-- writer -->
	<bean id="flowWriter" class="idv.hsiehpinghan.springbatchassistant.writer.FlowWriter"
		scope="step">
	</bean>

	<!-- tasklet -->
	<bean id="flowTasklet"
		class="idv.hsiehpinghan.springbatchassistant.tasklet.FlowTasklet"
		scope="step">
	</bean>

</beans>

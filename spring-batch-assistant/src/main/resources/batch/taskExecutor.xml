<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:batch="http://www.springframework.org/schema/batch"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd">

	<batch:job id="taskExecutorJob">
		<batch:step id="linearFlowTaskletStep" next="linearFlowReaderProcessorWriterStep">
			<tasklet ref="linearFlowTasklet"></tasklet>
		</batch:step>
	</batch:job>

	<bean id="taskExecutorTasklet"
		class="idv.hsiehpinghan.springbatchassistant.tasklet.TaskExecutorTasklet"
		scope="step">
	</bean>

</beans>

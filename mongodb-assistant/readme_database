# create collection
db.createCollection("mongodb_database", { capped : true, size : 16384 })

# switch 
use mongodb_database

# show function
db.runCommand

# run command
db.runCommand({ dbstats : 1})

# show status
db.stats()


-----<<temp data>>-------------------------------------------------------------------
# backup
use admin
db.runCommand({
   fsync: 1,
   lock: 1
})
db.currentOp()
<<!!!new console>> mongodump -h 127.0.0.1 -d nutch -o /tmp/backup/
db.fsyncUnlock()

# restore
<<!!!new console>> mongorestore -h 127.0.0.1 -d nutch --drop /tmp/backup/nutch

# drop database
db.dropDatabase()

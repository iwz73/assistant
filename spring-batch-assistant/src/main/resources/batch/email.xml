<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:batch="http://www.springframework.org/schema/batch"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd">

	<!-- job -->
	<batch:job id="emailJob">
		<batch:step id="emailStep">
			<tasklet>
				<chunk reader="emailItemReader" writer="emailItemWriter"
					commit-interval="3">
				</chunk>
			</tasklet>
		</batch:step>
	</batch:job>

	<!-- reader -->
	<bean id="emailItemReader"
		class="org.springframework.batch.item.adapter.ItemReaderAdapter"
		scope="step">
		<property name="targetMethod" value="emailRead" />
		<property name="targetObject" ref="emailService" />
	</bean>

	<!-- writer -->
	<bean id="emailItemWriter"
		class="org.springframework.batch.item.adapter.ItemWriterAdapter">
		<property name="targetMethod" value="adaptWrite" />
		<property name="targetObject" ref="emailService" />
	</bean>

	<!-- targetObject -->
	<bean id="emailService"
		class="idv.hsiehpinghan.springbatchassistant.service.AdapterService"></bean>

</beans>
